.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-10
    %h2 Basic Form
    %ol.breadcrumb
      %li
        %a{:href => "#{url_for :controller => 'dashboards', :action => 'dashboard_1'}"} Home
      %li
        %a Forms
      %li.active
        %strong Basic Form
.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-7
      .ibox.float-e-margins
        .ibox-title
          %h5
            Basic form
            %small Simple login form example
          .ibox-tools
            %a.collapse-link
              %i.fa.fa-chevron-up
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.fa.fa-wrench
            %ul.dropdown-menu.dropdown-user
              %li
                %a{:href => "#"} Config option 1
              %li
                %a{:href => "#"} Config option 2
            %a.close-link
              %i.fa.fa-times
        .ibox-content
          .row
            .col-sm-6.b-r
              %h3.m-t-none.m-b Sign in
              %p Sign in today for more expirience.
              %form{:role => "form"}
                .form-group
                  %label Email
                  %input.form-control{:placeholder => "Enter email", :type => "email"}/
                .form-group
                  %label Password
                  %input.form-control{:placeholder => "Password", :type => "password"}/
                %div
                  %button.btn.btn-sm.btn-primary.pull-right.m-t-n-xs{:type => "submit"}
                    %strong Log in
                  %label
                    %input.i-checks{:type => "checkbox"}/
                    Remember me
            .col-sm-6
              %h4 Not a member?
              %p You can create an account:
              %p.text-center
                %a{:href => ""}
                  %i.fa.fa-sign-in.big-icon
    .col-lg-5
      .ibox.float-e-margins
        .ibox-title
          %h5 Horizontal form
          .ibox-tools
            %a.collapse-link
              %i.fa.fa-chevron-up
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.fa.fa-wrench
            %ul.dropdown-menu.dropdown-user
              %li
                %a{:href => "#"} Config option 1
              %li
                %a{:href => "#"} Config option 2
            %a.close-link
              %i.fa.fa-times
        .ibox-content
          %form.form-horizontal
            %p Sign in today for more expirience.
            .form-group
              %label.col-lg-2.control-label Email
              .col-lg-10
                %input.form-control{:placeholder => "Email", :type => "email"}/
                %span.help-block.m-b-none Example block-level help text here.
            .form-group
              %label.col-lg-2.control-label Password
              .col-lg-10
                %input.form-control{:placeholder => "Password", :type => "password"}/
            .form-group
              .col-lg-offset-2.col-lg-10
                .i-checks
                  %label
                    %input{:type => "checkbox"}/
                    %i
                    Remember me
            .form-group
              .col-lg-offset-2.col-lg-10
                %button.btn.btn-sm.btn-white{:type => "submit"} Sign in
  .row
    .col-lg-8
      .ibox.float-e-margins
        .ibox-title
          %h5 Inline form
          .ibox-tools
            %a.collapse-link
              %i.fa.fa-chevron-up
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.fa.fa-wrench
            %ul.dropdown-menu.dropdown-user
              %li
                %a{:href => "#"} Config option 1
              %li
                %a{:href => "#"} Config option 2
            %a.close-link
              %i.fa.fa-times
        .ibox-content
          %form.form-inline{:role => "form"}
            .form-group
              %label.sr-only{:for => "exampleInputEmail2"} Email address
              %input#exampleInputEmail2.form-control{:placeholder => "Enter email", :type => "email"}/
            .form-group
              %label.sr-only{:for => "exampleInputPassword2"} Password
              %input#exampleInputPassword2.form-control{:placeholder => "Password", :type => "password"}/
            .checkbox.m-r-xs
              %input#checkbox1{:type => "checkbox"}/
              %label{:for => "checkbox1"}
                Remember me
            %button.btn.btn-white{:type => "submit"} Sign in
    .col-lg-4
      .ibox.float-e-margins
        .ibox-title
          %h5
            Modal form
            %small Example of login in modal box
          .ibox-tools
            %a.collapse-link
              %i.fa.fa-chevron-up
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.fa.fa-wrench
            %ul.dropdown-menu.dropdown-user
              %li
                %a{:href => "#"} Config option 1
              %li
                %a{:href => "#"} Config option 2
            %a.close-link
              %i.fa.fa-times
        .ibox-content
          .text-center
            %a.btn.btn-primary{"data-toggle" => "modal", :href => "#modal-form"} Form in simple modal box
          #modal-form.modal.fade{"aria-hidden" => "true"}
            .modal-dialog
              .modal-content
                .modal-body
                  .row
                    .col-sm-6.b-r
                      %h3.m-t-none.m-b Sign in
                      %p Sign in today for more expirience.
                      %form{:role => "form"}
                        .form-group
                          %label Email
                          %input.form-control{:placeholder => "Enter email", :type => "email"}/
                        .form-group
                          %label Password
                          %input.form-control{:placeholder => "Password", :type => "password"}/
                        %div
                          %button.btn.btn-sm.btn-primary.pull-right.m-t-n-xs{:type => "submit"}
                            %strong Log in
                          %label
                            %input.i-checks{:type => "checkbox"}/
                            Remember me
                    .col-sm-6
                      %h4 Not a member?
                      %p You can create an account:
                      %p.text-center
                        %a{:href => ""}
                          %i.fa.fa-sign-in.big-icon
