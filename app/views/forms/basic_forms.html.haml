              .col-sm-10
                %select.form-control.m-b{:name => "account"}
                  %option option 1
                  %option option 2
                  %option option 3
                  %option option 4
                .col-lg-4.m-l-n
                  %select.form-control{:multiple => "multiple"}
                    %option option 1
