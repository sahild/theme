.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-10
    %h2 Sparkline Charts
    %ol.breadcrumb
      %li
        %a{:href => "#{url_for :controller => 'dashboards', :action => 'dashboard_1'}"} Home
      %li
        %a Graphs
      %li.active
        %strong Sparkline Charts
  .col-lg-2
.wrapper.wrapper-content.animated.fadeInDown
  .row
    .col-lg-5
      .jumbotron
        %h1 Sparkline
        %p It's another graet library for inline graphics visualization.
        %p
          %a.btn.btn-primary.btn-lg{:href => "http://omnipotent.net/jquery.sparkline", :role => "button", :target => "_blank"} Learn more about Sparkline
    .col-lg-7
      .ibox.float-e-margins
        .ibox-title
          %h5
            Sparkline Charts
            %small With custom colors.
          .ibox-tools
            %a.close-link
              %i.fa.fa-times
        %div
          %table.table.table-bordered.white-bg
            %thead
              %tr
                %th Graph
                %th Type
            %tbody
              %tr
                %td
                  %span#sparkline1
                %td
                  Inline line chart
              %tr
                %td
                  %span#sparkline2
                %td
                  Bar chart
              %tr
                %td
                  %span#sparkline3
                %td
                  Pie chart
              %tr
                %td
                  %span#sparkline4
                %td
                  Long inline chart
              %tr
                %td
                  %span#sparkline5
                %td
                  Tristate chart
              %tr
                %td
                  %span#sparkline6
                %td
                  Discrete chart
  .row
    .col-lg-4
      .ibox.float-e-margins
        .ibox-title
          %h5 Custom pie size example
          .ibox-tools
            %a.collapse-link
              %i.fa.fa-chevron-up
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.fa.fa-wrench
            %ul.dropdown-menu.dropdown-user
              %li
                %a{:href => "#"} Config option 1
              %li
                %a{:href => "#"} Config option 2
            %a.close-link
              %i.fa.fa-times
        .ibox-content.text-center.h-200
          %span#sparkline7
    .col-lg-4
      .ibox.float-e-margins
        .ibox-title
          %h5 Custom bar size example
          .ibox-tools
            %a.collapse-link
              %i.fa.fa-chevron-up
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.fa.fa-wrench
            %ul.dropdown-menu.dropdown-user
              %li
                %a{:href => "#"} Config option 1
              %li
                %a{:href => "#"} Config option 2
            %a.close-link
              %i.fa.fa-times
        .ibox-content.text-center.h-200
          %span#sparkline8
    .col-lg-4
      .ibox.float-e-margins
        .ibox-title
          %h5 Custom line size example
          .ibox-tools
            %a.collapse-link
              %i.fa.fa-chevron-up
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.fa.fa-wrench
            %ul.dropdown-menu.dropdown-user
              %li
                %a{:href => "#"} Config option 1
              %li
                %a{:href => "#"} Config option 2
            %a.close-link
              %i.fa.fa-times
        .ibox-content.text-center.h-200
          %span#sparkline9
- content_for :javascript do
  :javascript
    $(function() {
    
        $("#sparkline1").sparkline([34, 43, 43, 35, 44, 32, 44, 52, 25], {
            type: 'line',
            lineColor: '#17997f',
            fillColor: '#1ab394',
        });
        $("#sparkline2").sparkline([5, 6, 7, 2, 0, -4, -2, 4], {
            type: 'bar',
            barColor: '#1ab394',
            negBarColor: '#c6c6c6'
        });
    
        $("#sparkline3").sparkline([1, 1, 2], {
            type: 'pie',
            sliceColors: ['#1ab394', '#b3b3b3', '#e4f0fb']
        });
    
        $("#sparkline4").sparkline([34, 43, 43, 35, 44, 32, 15, 22, 46, 33, 86, 54, 73, 53, 12, 53, 23, 65, 23, 63, 53, 42, 34, 56, 76, 15, 54, 23, 44], {
            type: 'line',
            lineColor: '#17997f',
            fillColor: '#ffffff',
        });
    
        $("#sparkline5").sparkline([1, 1, 0, 1, -1, -1, 1, -1, 0, 0, 1, 1], {
            type: 'tristate',
            posBarColor: '#1ab394',
            negBarColor: '#bfbfbf'
        });
    
    
        $("#sparkline6").sparkline([4, 6, 7, 7, 4, 3, 2, 1, 4, 4, 5, 6, 3, 4, 5, 8, 7, 6, 9, 3, 2, 4, 1, 5, 6, 4, 3, 7, ], {
            type: 'discrete',
            lineColor: '#1ab394'
        });
    
        $("#sparkline7").sparkline([52, 12, 44], {
            type: 'pie',
            height: '150px',
            sliceColors: ['#1ab394', '#b3b3b3', '#e4f0fb']
        });
    
        $("#sparkline8").sparkline([5, 6, 7, 2, 0, 4, 2, 4, 5, 7, 2, 4, 12, 14, 4, 2, 14, 12, 7], {
            type: 'bar',
            barWidth: 8,
            height: '150px',
            barColor: '#1ab394',
            negBarColor: '#c6c6c6'
        });
    
        $("#sparkline9").sparkline([34, 43, 43, 35, 44, 32, 15, 22, 46, 33, 86, 54, 73, 53, 12, 53, 23, 65, 23, 63, 53, 42, 34, 56, 76, 15, 54, 23, 44], {
            type: 'line',
            lineWidth: 1,
            height: '150px',
            lineColor: '#17997f',
            fillColor: '#ffffff',
        });
    });
